@{
  Layout = "_Layout";
}

@model AnimalShelter.Models.Animal //Type, Name, Date of Admittance, Breed

<h4>Add a new animal</h4>
@using (Html.BeginForm())
{
  <p>@Html.LabelFor(model => model.Type, new {@class="hello"})
  @Html.TextBoxFor(model => model.Type)</p>
  <p>@Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)</p>
  <p>@Html.LabelFor(model => model.DateOfAdmittance)
  @Html.TextBoxFor(model => model.DateOfAdmittance, new {type="date"})</p>
  <p>@Html.LabelFor(model => model.Breed)
  @Html.TextBoxFor(model => model.Breed)</p>
    <input type="submit" value="Add new animal" />
}
<p>@Html.ActionLink("Show all animals", "Index")</p>